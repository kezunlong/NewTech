@using Lifepoem.Web.Mvc.Pagination;
@model NewTech.Web.Models.ProposalsViewModel

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>项目名称</th>
            <th>公司名称</th>
            <th>姓名</th>
            <th>Email</th>
            <th>电话</th>
            <th>使用技术</th>
            <th class="text-center" style="width:100px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Proposals)
        {
            <tr>
                <td>@Html.ActionLink(item.ProjectTitle, "RequestForProposal", "Home", new { item.Id }, null)</td>
                <td>@item.CompanyName</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Telephone</td>
                <td>@item.Technology</td>
                <td class="text-center">
                    <a href="@Url.Action("DeleteProposal", "Admin", new { id = item.Id })" onclick="return confirm('Are you sure to delete this Proposal?');">
                        <span class="icon fa fa-remove"></span> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pull-right">
    @Html.AjaxPagination(Model.PagingOption, PagingUIFactory.GetFontAwesomeUI())
</div>
